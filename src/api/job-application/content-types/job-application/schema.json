{
  "kind": "collectionType",
  "collectionName": "job_applications",
  "info": {
    "singularName": "job-application",
    "pluralName": "job-applications",
    "displayName": "Job Application",
    "description": "Job applications submitted through the careers page"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "linkedIn": {
      "type": "string"
    },
    "coverLetter": {
      "type": "text",
      "required": true
    },
    "jobTitle": {
      "type": "string",
      "required": true
    },
    "cv": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["files"]
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "reviewing", "shortlisted", "interviewed", "offered", "rejected"],
      "default": "pending"
    },
    "appliedAt": {
      "type": "datetime",
      "required": true
    },
    "notes": {
      "type": "text"
    }
  }
}
