{
  "kind": "collectionType",
  "collectionName": "service_pages",
  "info": {
    "singularName": "service-page",
    "pluralName": "service-pages",
    "displayName": "Service Page",
    "description": "Individual service detail pages (Healthcare, Education, Enterprise, Technology)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "services": {
      "type": "component",
      "repeatable": true,
      "component": "service.service-detail"
    },
    "benefits": {
      "type": "json"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
