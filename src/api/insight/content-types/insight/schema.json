{
  "kind": "collectionType",
  "collectionName": "insights",
  "info": {
    "singularName": "insight",
    "pluralName": "insights",
    "displayName": "Insight",
    "description": "Blog posts, news, community updates"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["blog", "news", "community", "case-study"],
      "default": "blog"
    },
    "industry": {
      "type": "enumeration",
      "enum": ["healthcare", "education", "enterprise", "technology"],
      "required": false
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "string"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "tags": {
      "type": "json"
    }
  }
}
