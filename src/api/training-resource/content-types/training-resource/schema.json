{
  "kind": "collectionType",
  "collectionName": "training_resources",
  "info": {
    "singularName": "training-resource",
    "pluralName": "training-resources",
    "displayName": "Training Resource",
    "description": "Training materials and educational content"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["video", "document", "guide", "webinar"],
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "duration": {
      "type": "string"
    },
    "fileUrl": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "content": {
      "type": "richtext"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}
